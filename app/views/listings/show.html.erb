<div class="row">
	<div class="col-md-1">
        <%= button_to agent_path, method: "get", id: "back-button", class: "btn btn-default btn-md" do %>
          <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span> Back
        <% end %>
    </div>
	<div class="col-md-10">
		<div class="panel panel-default">

			<div class="panel-body" style="background: url('<%= @listing.image_url %>') center no-repeat; height: 450px; background-size: cover;">
			</div>
			<div class="panel-footer">
				<h3><%= @listing.address %></h3>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<div class="panel panel-default">
					<div class="panel-heading">
						<div class="row">
						<div class="col-md-10">
							<h4>Property Details</h4>
						</div>
						<div class="col-md-2">
							<button type="button" id="edit-event" class="btn btn-default btn-md">
	              				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
	        				</button>
						</div>
					</div>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-md-3">
								<p class="attrTitle">Address</p>
								<p class="attrTitle">City</p>
								<p class="attrTitle">State</p>
								<p class="attrTitle">Zip Code</p>
								<p class="attrTitle">Lot Size</p>
								<p class="attrTitle">Beds</p>
								<p class="attrTitle">Baths</p>
								<p class="attrTitle">Status</p>
								<p class="attrTitle">Price</p>
								<p class="attrTitle">Description</p>
							</div>
							<div class="col-md-9">
								<p class="attrValue"><%= @listing.address_1 %></p>
								<p class="attrValue"><%= @listing.city %></p>
								<p class="attrValue"><%= @listing.state %></p>
								<p class="attrValue"><%= @listing.zip_code %></p>
								<p class="attrValue"><%= @listing.sqft %></p>
								<p class="attrValue"><%= @listing.bed %></p>
								<p class="attrValue"><%= @listing.bath %></p>
								<p class="attrValue"><%= @listing.status %></p>
								<p class="attrValue"><%= @listing.price %></p>
								<p class="attrValue"><%= @listing.description %></p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="row">
					<div class="col-md-12">
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4>Listing Agent</h4>
							</div>
							<div class="panel-body">
								<div class="row">
									<div class="col-md-3">
										<p class="attrTitle">Name</p>
										<p class="attrTitle">Phone #</p>
										<p class="attrTitle">Email</p>
									</div>
									<div class="col-md-9">
										<p class="attrValue"><%= @agent.full_name %></p>
										<p class="attrValue"><%= @agent.phone %></p>
										<p class="attrValue"><%= @agent.email %></p>
									</div>
								</div>
							</div>
						</div>
						<h4>Property Events</h4>
						<% @events.each do |event| %>
						<div class="panel panel-default">
							<div class="panel-heading">
								<p><%= event.title %></>
							</div>
							<div class="panel-body">
								<div class="row">
									<div class="col-md-3">
										<p class="attrTitle">Date</p>
										<p class="attrTitle">Start Time</p>
										<p class="attrTitle">End Time</p>
										<p class="attrTitle">Notes</p>
									</div>
									<div class="col-md-9">
										<p class="attrValue"><%= event.date %></p>
										<p class="attrValue"><%= event.start_time %></p>
										<p class="attrValue"><%= event.end_time %></p>
										<p class="attrValue"><%= event.notes %></p>
									</div>
								</div>
							</div>
						</div>
						<% end %>
					</div>
				</div>
			</div>
	</div>
	<div class="col-md-1"></div>
</div>
